{
  "name": "calenderjs",
  "version": "0.0.0",
  "private": true,
  "description": "基于日历的预约管理系统，支持 Appointment DSL、多租户架构和第三方集成",
  "scripts": {
    "dev": "pangu",
    "dev:react": "pnpm exec pnpm --filter demos-react dev",
    "build": "nx run-many --target=build --parallel",
    "build:calendar": "nx build @calenderjs/calendar",
    "test": "nx run-many --target=test --parallel",
    "lint": "nx run-many --target=lint --parallel",
    "clean": "nx reset && nx run-many --target=clean --parallel",
    "graph": "nx graph",
    "prepare": "husky"
  },
  "devDependencies": {
    "@nx/devkit": "^22.3.3",
    "@nx/js": "^22.3.3",
    "@nx/next": "^22.3.3",
    "@nx/node": "^22.3.3",
    "@nx/vite": "^22.3.3",
    "@nx/workspace": "^22.3.3",
    "@systembug/pangu": "^0.0.10",
    "@systembug/qingniao": "^0.0.10",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^20.19.27",
    "husky": "^9.1.7",
    "inquirer": "^9.3.8",
    "nx": "^22.3.3",
    "ora": "^8.2.0",
    "tsx": "^4.8.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.19.0 || >=22.12.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.27.0",
  "volta": {
    "node": "22.12.0",
    "pnpm": "10.27.0"
  }
}
