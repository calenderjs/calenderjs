{
    "name": "calenderjs",
    "version": "0.1.0",
    "private": true,
    "description": "基于日历的预约管理系统，支持 Appointment DSL、多租户架构和第三方集成",
    "scripts": {
        "dev": "pnpm exec tsx scripts/dev.ts",
        "dev:react": "pnpm exec pnpm --filter demos-react dev",
        "build": "nx run-many --target=build --parallel",
        "build:calendar": "nx build @calenderjs/calendar",
        "test": "nx run-many --target=test --parallel",
        "lint": "nx run-many --target=lint --parallel",
        "clean": "nx reset && nx run-many --target=clean --parallel",
        "graph": "nx graph"
    },
    "devDependencies": {
        "@nx/devkit": "^17.3.2",
        "@nx/js": "^17.3.2",
        "@nx/next": "^17.3.2",
        "@nx/node": "^17.3.2",
        "@nx/vite": "^17.3.2",
        "@nx/workspace": "^17.3.2",
        "@types/inquirer": "^9.0.9",
        "@types/node": "^20.19.27",
        "inquirer": "^9.3.8",
        "nx": "^17.3.2",
        "ora": "^8.2.0",
        "typescript": "^5.9.3"
    },
    "engines": {
        "node": ">=20.19.0 || >=22.12.0",
        "pnpm": ">=8.0.0"
    },
    "packageManager": "pnpm@8.15.0",
    "volta": {
        "node": "22.12.0",
        "pnpm": "8.15.0"
    }
}
