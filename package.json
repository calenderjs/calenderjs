{
  "name": "calenderjs",
  "version": "0.0.2",
  "private": true,
  "description": "基于日历的预约管理系统，支持 Appointment DSL、多租户架构和第三方集成",
  "scripts": {
    "dev": "pangu",
    "dev:react": "pnpm --filter @calenderjs/demos-react dev",
    "build": "turbo run build",
    "build:calendar": "turbo run build --filter=@calenderjs/calendar",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo typecheck",
    "clean": "turbo run clean && rm -rf .turbo node_modules/.cache",
    "prepare": "husky",
    "release": "qingniao"
  },
  "devDependencies": {
    "@systembug/pangu": "^0.0.10",
    "@systembug/qingniao": "^0.0.10",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^20.19.27",
    "husky": "^9.1.7",
    "inquirer": "^9.3.8",
    "ora": "^8.2.0",
    "tsx": "^4.8.1",
    "turbo": "^2.3.3",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.19.0 || >=22.12.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.27.0",
  "volta": {
    "node": "22.12.0",
    "pnpm": "10.27.0"
  }
}
