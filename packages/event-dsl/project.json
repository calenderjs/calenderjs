{
    "name": "@calenderjs/event-dsl",
    "sourceRoot": "packages/event-dsl/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "outputs": ["{workspaceRoot}/packages/event-dsl/dist"],
            "options": {
                "commands": [
                    "cd packages/event-dsl && pnpm build:parser",
                    "cd packages/event-dsl && pnpm build"
                ],
                "parallel": false
            }
        },
        "dev": {
            "executor": "@nx/js:tsc",
            "options": {
                "watch": true
            }
        },
        "test": {
            "executor": "@nx/vite:test",
            "options": {
                "passWithNoTests": true
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "options": {
                "lintFilePatterns": ["packages/event-dsl/**/*.ts"]
            }
        }
    },
    "tags": ["scope:dsl", "type:library"]
}
