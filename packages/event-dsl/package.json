{
  "name": "@calenderjs/event-dsl",
  "version": "0.1.0",
  "description": "Event DSL - 领域特定语言用于定义事件类型和业务规则",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsc --watch",
    "build": "peggy src/parser/event-dsl.pegjs -o src/parser/parser.js && tsc",
    "build:parser": "peggy src/parser/event-dsl.pegjs -o src/parser/parser.js",
    "test": "vitest",
    "lint": "eslint src"
  },
  "dependencies": {
    "@calenderjs/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "peggy": "^4.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
