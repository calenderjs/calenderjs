{
    "name": "@calenderjs/calendar",
    "version": "0.0.0",
    "description": "Calendar 组件 - 基于 WSX 框架构建的事件日历组件",
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.mjs"
            },
            "require": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.cjs"
            }
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "vite build --watch",
        "build": "vite build",
        "test": "vitest run",
        "lint": "eslint src"
    },
    "dependencies": {
        "@calenderjs/core": "workspace:*",
        "@calenderjs/date-time": "workspace:*",
        "@calenderjs/event-dsl": "workspace:*",
        "@calenderjs/event-model": "workspace:*",
        "@wsxjs/wsx-core": "^0.0.27"
    },
    "peerDependencies": {
        "@wsxjs/wsx-core": "^0.0.27"
    },
    "devDependencies": {
        "@testing-library/dom": "^10.4.1",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^20.19.27",
        "@wsxjs/eslint-plugin-wsx": "^0.0.27",
        "@wsxjs/wsx-vite-plugin": "^0.0.27",
        "eslint": "^9.39.2",
        "happy-dom": "^20.0.11",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.51.0",
        "vite": "^7.3.0",
        "vite-plugin-dts": "^4.5.4",
        "vitest": "^2.1.9"
    }
