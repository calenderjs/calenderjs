{
  "name": "@calenderjs/event-model",
  "sourceRoot": "packages/event-model/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{workspaceRoot}/packages/event-model/dist"],
      "options": {
        "outputPath": "packages/event-model/dist"
      }
    },
    "dev": {
      "executor": "@nx/js:tsc",
      "options": {
        "watch": true
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "options": {
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/event-model/**/*.ts"]
      }
    }
  },
  "tags": ["scope:event-model", "type:library"]
}
