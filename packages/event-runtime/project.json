{
  "name": "event-runtime",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/event-runtime/src",
  "projectType": "library",
  "tags": ["type:lib", "scope:event-dsl"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/event-runtime/dist"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/packages/event-runtime"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/event-runtime"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    }
  }
}
